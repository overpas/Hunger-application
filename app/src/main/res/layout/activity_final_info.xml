<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="by.overpass.hunger.FinalInfoActivity">

    <TextView
        android:id="@+id/successTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_of_some_dp"
        android:layout_marginEnd="@dimen/margin_of_some_dp"
        android:layout_marginStart="@dimen/margin_of_some_dp"
        android:layout_marginTop="@dimen/margin_of_some_dp"
        android:text="@string/order_confirmed_caption"
        android:textColor="@color/brown"
        android:textSize="@dimen/huge_text_size"
        app:layout_constraintBottom_toTopOf="@+id/btnGoToStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tickImageView" />

    <ImageView
        android:id="@+id/tickImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:src="@drawable/tick"
        app:layout_constraintBottom_toTopOf="@id/successTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoToStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_of_some_dp"
        android:layout_marginEnd="@dimen/margin_of_some_dp"
        android:layout_marginStart="@dimen/margin_of_some_dp"
        android:background="@drawable/btn_hunger_generic"
        android:text="@string/go_to_start_menu_caption"
        android:textColor="@color/priceColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
